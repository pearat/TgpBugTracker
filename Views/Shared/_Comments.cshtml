@model IEnumerable<TgpBugTracker.Models.Comment>

@{
    ViewBag.Title = "Comment List";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("New Comment", "Create", "Comments",new { TktId = ViewBag.TktId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MediaURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuthorId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TicketId)
        </th>
        <th></th>
    </tr>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Detail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MediaURL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AuthorId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TicketId)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Comments", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", "Comments", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", "Comments", new { id = item.Id })
                </td>
            </tr>
        }
    }

</table>
