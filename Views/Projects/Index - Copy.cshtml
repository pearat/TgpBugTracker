@model IEnumerable<TgpBugTracker.Models.ProjectUsersVM>

@{
    ViewBag.Title = "Projects Index Page";
}
<aside class="">
    < div class="container">

    <h2>@ViewBag.Title</h2>
    @if (User.IsInRole("Admin"))
    {
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    }
    @{

        int j = 0;
        foreach (var item in Model)
        {
            var collapseNumber = "#collapse" + j;
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <table class="table">
                            <tbody>
                                <tr width="inherit">
                                    <td class="panel-title">
                                        <a data-toggle="collapse" href=@collapseNumber>@Html.DisplayFor(modelItem => item.ProjectName)</a>

                                        @if (User.IsInRole("Admin") || User.IsInRole("Project Manager"))
                                        {
                                            @Html.ActionLink("Assign", "AssignUsersToProject", new { ProjectId = item.ProjectId })

                                        }
                                        @if (User.IsInRole("Admin"))
                                        {
                                            @:|
                                            @Html.ActionLink("Edit", "Edit", new { id = item.ProjectId })
                                            @:|
                                            @Html.ActionLink("Delete", "Delete", new { id = item.ProjectId })
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div id="collapse1" class="panel-collapse collapse">
                        <table>
                            <thead>
                                <tr style="text-decoration-line:underline; font-weight:bold">
                                    <td width="30%"></td>
                                    <td width="20%">
                                        Project Manager
                                    </td>
                                    <td width="20%">
                                        Developer
                                    </td>
                                    <td width="20%">
                                        Submitter
                                    </td>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < ViewBag.TeamCount; i++)
                                {
                                    <tr class="list-group" width="inherit">

                                        <td></td>
                                        <td>
                                            @if (item.PjtMgrs[i] != null)
                                            {
                                                @Html.DisplayFor(modelItem => item.PjtMgrs[i])
                                            }
                                            else
                                            {
                                                <text>......</text>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Developers[i] != null)
                                            {
                                                @Html.DisplayFor(modelItem => item.Developers[i])
                                            }
                                            else
                                            {
                                                <text>......</text>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Submitters[i] != null)
                                            {
                                                @Html.DisplayFor(modelItem => item.Submitters[i])
                                            }
                                            else
                                            {
                                                <text>......</text>
                                            }
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <div class="panel-footer">Footer</div>
                    </div>
                </div>
            </div>
            j++;
        }
    }


    <div>
        @Html.ActionLink("Return Home", "Index", "Home")
    </div>

</aside>