@model TgpBugTracker.Models.UserRolesVM
@{
    ViewBag.Title = "AssignRoleToUser";
}
<aside class="right-side">
    <h2>Assign Roles to Staff Members</h2>
    <h4>Category</h4>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.UserId)

            <div class="form-group">
                @Html.LabelFor(model => model.DisplayName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DisplayName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DisplayName, "", new { @class = "text-danger" })
                </div>
            </div>

            @Html.LabelFor(model => model.AuthLevel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.ListBox("Roles", Model.Selected, new { id = "role-selection", multiple = "multiple" })*@
                @*@Html.ListBox("Roles", Model.Selected, new { id = "role-selection" })*@

                @Html.DropDownList("AuthLevel", null, htmlAttributes: new { @class = "form-control" })

                @*@Html.ValidationMessageFor(model => model.Selected, "", new { @class = "text-danger" })*@
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IsGuest, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IsGuest, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.IsGuest, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Assign" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index", new { period = "currentMonth" })
    </div>
</aside>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(window).load(function () {
            $('#role-selection').multiselect();
        });
    </script>
}




