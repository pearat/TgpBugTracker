@model IEnumerable<TgpBugTracker.Models.UserRolesVM>

@{
    ViewBag.Title = "Index";
}
<aside class="">
    <h2>Admin Index</h2>

    <p>
        @Html.ActionLink("Create New Staff Member", "Index")
    </p>


    <table class="table" id="myTable">
        <thead>
            <tr>
                @*<th width="20%">
                    @Html.DisplayNameFor(m => m.UserId)
                </th>*@
                <th width="12%">
                    @Html.DisplayNameFor(m => m.DisplayName)
                </th>
                <th width="10%">
                    @Html.DisplayNameFor(m => m.Roles[0])
                </th>

                <th width="10%">
                    @Html.DisplayNameFor(m => m.Roles[1])
                </th>

                <th width="10%">
                    @Html.DisplayNameFor(m => m.Roles[2])
                </th>

                <th width="10%">
                    @Html.DisplayNameFor(m => m.Roles[3])
                </th>
                <th width="10">
                    @Html.DisplayNameFor(m => m.IsGuest)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr width="inherit">
                    @*<td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayName)
                    </td>
                    @for (int i = 0; i < ViewBag.NumRoles; i++)
                    {
                        <td>
                            @if (i < item.Roles.Count())
                            {  
                                @Html.DisplayFor(modelItem => item.Roles[i])
                            }
                            else
                            {
                                <text>......</text>
                            }
                        </td>

                    }

                    <td>
                        @Html.DisplayFor(modelItem => item.IsGuest)
                    </td>
                    <td>
                        @Html.ActionLink("Assign", "AssignRolesToUser", new { UserId = item.UserId }) |
                        <button data-id="@item.UserId" class="del" data-toggle="modal" data-target="#delDealModal">
                            <span>Delete</span>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        @Html.ActionLink("Return Home", "Index", "Home")
    </div>

</aside>
